@model Projeto.WEB.Models.ContatoEdicaoModel

@{
    ViewBag.Title = "Edicao";
    
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">x</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Editar Contato</h4>
             </div>

             @Html.AntiForgeryToken()

            <div class="modal-body">
                <label>Id do Contato:</label>
                <input type="text" id="idcontato_alt" class="form-control"
                       readonly="readonly" />
                <br />
                <label>Nome do Contato:</label>
                <input type="text" id="nome_alt" class="form-control" />
                <br />
                <label>Email:</label>
                <input type="email" id="email_alt" class="form-control" />
                <br />
                <label>Telefone:</label>
                <input type="tel" id="telefone_alt"
                       class="form-control" />

                <br />                
            </div>
            <div class="modal-footer">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <input type="button" value="Cancelar" class="btn btn-danger" id="closebtn" data-dissmiss="modal" />
            </div>
        }
    </div><!--/.modal-content-->
</div><!--/.modal-dialog-->
