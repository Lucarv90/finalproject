@model List<Projeto.WEB.Models.ConsultaTarefaModel>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/LayoutLogged.cshtml";
}
<br />
<br />


<div>
    <table class="table table-bordered table-hover table-striped table-responsive">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome da Tarefa</th>
                <th>Data de Entrega</th>
                <th>Descrição</th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody>


            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.IdTarefa </td>
                    <td> @item.Nome </td>
                    <td> @item.DataEntrega</td>
                    <td> @item.Descricao</td>

                    <td>
                        <button class="btn btn-primary edit" data-id="@item.IdTarefa"><i class="glyphicon glyphicon-edit"></i></button>

                        <button class="btn btn-danger delete" data-id="@item.IdTarefa"><i class="glyphicon glyphicon-trash"></i></button>

                    </td>

                </tr>

            }


        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">Quantidade de registros: @Model.Count </td>
            </tr>
        </tfoot>
    </table>
</div>
<br />
<br />
<br />

<div class="modal" id="modalEdit">

</div>

<div class="modal" id="modalDel">

</div>

@section scripts{
    <script>
    $(function(){

        $(".edit").click(function () {
            var id = $(this).attr("data-id");
            $("#modalEdit").load("Edicao?id=" + id, function () {
                $("#modalEdit").modal();
            })

        });

        $(".delete").click(function () {
            var id = $(this).attr("data-id");
            $("#modalDel").load("Excluir?id=" + id, function () {
                $("#modalDel").modal();
            })

        });

        $("#closemodal").click(function () {
            $(".delete").modal("hide");
        });


    })
    </script>
}
